simulation:
    nequil      200
    nsteps      1000
    stepsize    0.01
    temperature 0.728
    
particles:
    n           64      # number of particles
    mass        48.0    # mass of particles
    
box: # choices [ periodic ]
    type    periodic
    size    4.2323167
    
forcefield: # choices [ Lennard-Jones ]
    pairpotential   Lennard-Jones
    sigma           1.0
    epsilon         1.0
    
thermostat: # choices [ Anderson,Nose-Hoover ]
    type    Anderson 
    eta     1.0
    
estimator:
    # for pair correlation estimator
    rmax    4.0
    dr      0.01
    # for structure factor estimator
    maxK    5
    # for velocity correlation estimator
    tmax    100 # window size measured in number of steps
    
    
    
